{
  "name": "reactjs-player",
  "version": "1.2.1",
  "description": "基于 react hooks 的 video 播放组件，结构简单，代码简洁，扩展方便。",
  "keywords": [
    "react",
    "media",
    "player",
    "video",
    "hls.js",
    "flv.js",
    "react-hooks"
  ],
  "author": "xiaosong <kunkkaco@gmail.com>",
  "homepage": "https://github.com/goblin-laboratory/reactjs-player/blob/master/packages/reactjs-player/README.md",
  "license": "MIT",
  "browser": "dist/index.umd.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goblin-laboratory/reactjs-player.git"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "rollup -c ./scripts/rollup.config.dev.js -w",
    "build": "rollup -c ./scripts/rollup.config.prod.js",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "nrm": "nrm use taobao"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-url": "^6.1.0",
    "@svgr/rollup": "^5.5.0",
    "gh-pages": "^3.2.3",
    "less": "^4.1.2",
    "postcss": "^8.3.9",
    "rollup": "^2.58.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.16.13",
    "fbemitter": "^3.0.0",
    "numeral": "^2.0.6",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-swf": "^1.0.7"
  }
}
